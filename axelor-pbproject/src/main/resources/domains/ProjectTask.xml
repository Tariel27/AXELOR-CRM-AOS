<?xml version="1.0" ?>
<domain-models xmlns="http://axelor.com/xml/ns/domain-models"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/domain-models http://axelor.com/xml/ns/domain-models/domain-models_7.1.xsd">

  <module name="project" package="com.axelor.apps.project.db"/>

  <entity name="ProjectTask">
    <datetime name="startDateTime" title="Start date-time"/>
    <datetime name="endDateTime" title="End date-time"/>
    <datetime name="deadlineDateTime" title="Deadline date-time"/>
    <many-to-one name="assignedBy" title="Assigned by" ref="com.axelor.auth.db.User" />
    <extra-code>
      <![CDATA[
	   			public static final String NEW = "New";
	   			public static final String IN_PROGRESS = "In progress";
	   			public static final String DONE = "Done";
	   			public static final String CANCELED = "Ð¡anceled";

	   		]]>
    </extra-code>

    <track replace="true">
      <field name="startDateTime"/>
      <field name="endDateTime"/>
      <field name="deadlineDateTime"/>
    </track>
  </entity>

</domain-models>
