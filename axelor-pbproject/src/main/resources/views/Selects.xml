<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_7.0.xsd">

    <selection name="meta.schedule.job.select" id="pbp.meta.schedule.job.select">
        <option value="com.axelor.apps.pbproject.job.DutySchedulerJob">com.axelor.apps.pbproject.job.DutySchedulerJob</option>
        <option value="com.axelor.apps.pbproject.job.BirthdaySchedulerJob">com.axelor.apps.pbproject.job.BirthdaySchedulerJob</option>
        <option value="com.axelor.apps.pbproject.job.HolidaySchedulerJob">com.axelor.apps.pbproject.job.HolidaySchedulerJob</option>
    </selection>

    <selection name="pbp.forum.color.select">
        <option value="#E0E0E0">General Forum</option>
        <option value="#FFC107">Niche Forum</option>
        <option value="#2196F3">Technical Forum</option>
        <option value="#4CAF50">Support Forum</option>
        <option value="#FF9800">Social Forum</option>
        <option value="#03A9F4">Educational Forum</option>
        <option value="#8BC34A">Q&amp;A Forum</option>
        <option value="#3F51B5">Review Forum</option>
        <option value="#F44336">News Forum</option>
        <option value="#9C27B0">Hobby and Interest Forum</option>
        <option value="#616161">Product/Service Forum</option>
        <option value="#2196F3">Career Forum</option>
        <option value="#4CAF50">Health &amp; Fitness Forum</option>
    </selection>

    <!-- Статусы ожидания заявок на отпрос от работы -->
    <selection name="pbp.ask.for.off.from.job.select">
        <option value="approved" color="green">Approved</option>
        <option value="denied" color="red">Denied</option>
        <option value="waiting" color="blue">Waiting</option>
    </selection>
    <!-- для порций блюд -->
    <selection name="pbp.portion.dish.select">
        <option value="1">1</option>
        <option value="1.5">1.5</option>
    </selection>

    <selection name="pbp.complexity.of.task.select">
        <option value="easy" color="green">Easy</option>
        <option value="medium" color="blue">Medium</option>
        <option value="hard" color="red">Hard</option>
    </selection>

</object-views>