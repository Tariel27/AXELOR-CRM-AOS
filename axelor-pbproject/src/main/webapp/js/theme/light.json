{
  "palette": {
    "blue": "#0033A0",
    "green": "#009B77",
    "purple": "#6D28D9",
    "red": "#E3342F",
    "yellow": "#F6C20D",
    "cyan": "#00A3E0",

    "white": "#FFFFFF",
    "black": "#000000",

    "body_color": "#4D4D4D",
    "emphasis_color": "#003B5C"
  },
  "border": {
    "color": "#D0D0D0"
  },
  "typography": {
    "body": {
      "fontSize": "16px"
    }
  },
  "components": {
    "Shell": {
      "sidebar": {
        "bg": "#EAF3F7"
      }
    },
    "Panel": {
      "header": {
        "bg": "#EAF3F7",
        "border": {
          "width": 1,
          "color": "#D0D0D0"
        }
      },
      "title": {
        "padding": "0.5rem 1rem",
        "color": "#0033A0"
      }
    },
    "Dropdown": {
      "border": {
        "color": "#D0D0D0"
      },
      "item_hover": {
        "bg": "#EAF3F7"
      },
      "item_active": {
        "bg": "#0033A0",
        "color": "#FFFFFF"
      },
      "divider": {
        "bg": "#D0D0D0"
      }
    },
    "NavMenu": {
      "item": {
        "border": {
          "radius": "0.5rem"
        }
      },
      "item_hover": {
        "bg": "#EAF3F7"
      },
      "item_active": {
        "bg": "#0033A0",
        "color": "#FFFFFF"
      },
      "icon": {
        "bg": "transparent"
      },
      "icon_hover": {
        "bg": "transparent"
      },
      "icon_active": {
        "color": "#FFFFFF"
      }
    },
    "NavTabs": {
      "item": {
        "padding": "0.5rem 1rem"
      },
      "text": {
        "transform": "none"
      },
      "icon": {
        "bg": "transparent"
      },
      "icon_hover": {
        "bg": "transparent"
      },
      "icon_active": {
        "bg": "transparent"
      }
    },
    "CommandBar": {
      "button": {
        "padding": "0.5rem 0.75rem"
      },
      "button_hover": {
        "bg": "#EAF3F7"
      },
      "button_active": {
        "bg": "#D0D0D0"
      }
    },
    "Table": {
      "bg": "#FFFFFF",
      "border": {
        "color": "#D0D0D0"
      },
      "header": {
        "bg": "#EAF3F7"
      },
      "row_odd": {
        "bg": "#F9F9F9"
      },
      "row_hover": {
        "bg": "#EAF3F7"
      },
      "row_active": {
        "bg": "#EAF3F7"
      },
      "cell_active": {
        "bg": "#E0F5F2"
      },
      "cell": {
        "padding": "0.375rem 0.5rem"
      }
    },
    "Button": {
      "paddingX": "0.75rem",
      "paddingY": "0.5rem"
    },
    "Badge": {
      "padding": "0.25rem 0.75rem",
      "border": {
        "radius": "0.5rem"
      }
    },
    "Form": {
      "padding": "1rem",
      "gap": "0.5rem 1rem"
    },
    "Input": {
      "padding": "0.5rem",
      "focus": {
        "shadow": "0 0 0 2px rgba(0, 155, 119, 0.2)",
        "border_width": "0 0 2px 0"
      },
      "invalid_focus": {
        "shadow": "0 0 0 2px rgba(255, 0, 0, 0.2)",
        "border_width": "0 0 2px 0"
      },
      "placeholder": {
        "color": "#9B9B9B"
      },
      "invalid": {
        "border_width": "0 0 2px 0"
      },
      "border": {
        "radius": "0.25rem"
      },
      "border_width": "0 0 2px 0"
    }
  }
}